{%extends "loginBundle:Default:basicentidade.html.twig"%}
{%block container %}
    <div class="container">

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">
                        <strong>Seu Perfil</strong>
                    </h2>
                    <hr>

					<div class="col-lg-12 text-center">
					</div>

					<div class="col-lg-12">
						<ul>
                                                        <div class="col-lg-12 text-center">
                                                            <p>
                                                                <strong>Entidade:</strong> {{nome}}
                                                            </p>
                                                        </div>
                                                        <div class="col-lg-12 text-center">
															<p>
                                                                <strong>E-mail cadastrado:</strong> {{email}}
                                                            </p>
                                                        </div>
                                                        <div class="col-lg-12 text-center">
															<p>
                                                                <strong>Logradouro:</strong> {{cidade}}
                                                            </p>
                                                        </div>
                                                        <div class="col-lg-12 text-center">
                                                            <hr>
                                                            <p>{{descricao}}</p>
                                                        </div>
														<form role="form" method="POST" action="{{path('login_homepage')}}" data-validate="parsley">
                                                            <div class="col-lg-12 text-center">
                                                                <div class="form-group col-lg-12">
                                                                    <button type="submit" class="btn btn-default" name="volta" value="voltar">Voltar</button>
                                                                </div>
                                                            </div>
                                                        </form>
						</ul>
					</div>
                <div class="clearfix"></div>

                </div>
            </div>
        </div>

    </div>
{%endblock%}
