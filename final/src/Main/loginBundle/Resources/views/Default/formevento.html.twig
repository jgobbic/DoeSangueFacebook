{% extends logged == 'logged' 
    ? 'loginBundle:Default:basicentidade.html.twig' 
    : 'loginBundle:Default:basic.html.twig' %}
{%block container %}
    <div class="container">
        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <div class="col-lg-3"></div>
                    <div class="col-lg-6">
                        <hr>
                        <h2 class="intro-text text-center">
                            {%if evento is null %}
                            <strong>Registrar um Evento!</strong>
                            {%else%}
                            <strong>Editar um Evento!</strong>
                            {%endif%}
                        </h2>
                        <hr>
                        <p>
                            Por favor preencha este formulário para cadastrar um evento.
                        </p>
                        <p>
                            Os campos marcados com * são obrigatórios.
                        </p>
                        <form role="form" method="POST" action="{{path('login_eventoreg')}}" data-validate="parsley">
                            {%if evento is null %}
                                <div class="row">
                                    <div class="form-group col-lg-12">
                                        <label>Nome*</label>
                                        <input type="text" name="nome" class="form-control" data-trigger="change" data-required="true">
                                    </div>
                                    {% if error1 is defined%}
                                        <div class="col-xs-12">
                                            <div class="col-xs-2"></div>
                                            <div class="col-xs-8 alert alert-danger fade in">
                                                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                                <strong>Nome já cadastrado!</strong>
                                            </div>
                                        </div>
                                    {%endif%}
                                    <div class="form-group col-lg-6">
                                        <label>Cidade*</label>
                                        <input type="text" name="cidade" class="form-control" data-trigger="change" data-required="true">
                                    </div>
                                    <div class="form-group col-lg-6">
                                        <label for="estado">Estado:*</label>
                                            <select class="form-control" id="estado" name="estado" data-trigger="change" data-required="true">
                                                <option selected disabled>Escolha aqui</option>
                                                <option value="ac">AC</option>	 
                                                <option value="al">AL</option>	 
                                                <option value="ap">AP</option>	 
                                                <option value="am">AM</option>	 
                                                <option value="ba">BA</option>	 
                                                <option value="ce">CE</option>	 
                                                <option value="df">DF</option>	 
                                                <option value="es">ES</option>
                                                <option value="go">GO</option>
                                                <option value="ma">MA</option>
                                                <option value="mt">MT</option>
                                                <option value="ms">MS</option>
                                                <option value="mg">MG</option>
                                                <option value="pa">PA</option>
                                                <option value="pb">PB</option>
                                                <option value="pr">PR</option>
                                                <option value="pe">PE</option>
                                                <option value="pi">PI</option>
                                                <option value="rj">RJ</option>
                                                <option value="rn">RN</option>
                                                <option value="rs">RS</option>
                                                <option value="ro">RO</option>
                                                <option value="rr">RR</option>
                                                <option value="sc">SC</option>
                                                <option value="sp">SP</option>
                                                <option value="se">SE</option>	 
                                                <option value="to">TO</option>
                                            </select>
                                    </div>
                                    <div class="form-group col-lg-9">
                                        <label>Rua*</label>
                                        <input type="text" name="rua" class="form-control" data-trigger="change" data-required="true">
                                    </div>
                                    <div class="form-group col-lg-3">
                                        <label>Número*</label>
                                        <input type="number" name="numero" class="form-control" data-trigger="change" data-required="true" min="0">
                                    </div>
                                    <div class="form-group col-lg-12">
                                        <label>Bairro*</label>
                                        <input type="text" name="bairro" class="form-control" data-trigger="change" data-required="true">
                                    </div>
                                    <div class="form-group col-lg-12">
                                        <label>Complemento</label>
                                        <input type="text" name="complemento" class="form-control" data-trigger="change">
                                    </div>
                                    <div class="form-group col-lg-12">
                                        <label>Link para o evento no Facebook*</label>
                                        <input type="url" name="linkfacebook" class="form-control" data-trigger="change" data-required="true">
                                    </div>
                                    <div class="form-group col-lg-12"> 
                                        <label>Data de Início*</label>
                                        <input type="date" name="datainicio" class="form-control" data-trigger="change" data-required="true"/><span class="inst">(MM/DD/YY)</span> 
                                    </div> 

                                    <div class="form-group col-lg-12"> 
                                        <label>Data de Término*</label>
                                        <input type="date" name="datafim" class="form-control" data-trigger="change" data-required="true"/><span class="inst">(MM/DD/YY)</span> 
                                    </div> 
                                    <div class="form-group col-lg-12"> 
                                        <label>Horário de Início*</label>
                                        <input type="time" name="horainicio" class="form-control" data-trigger="change" data-required="true"/><span class="inst">(H:M)</span> 
                                    </div> 

                                    <div class="form-group col-lg-12"> 
                                        <label>Horário de Término*</label>
                                        <input type="time" name="horafim" class="form-control" data-trigger="change" data-required="true"/><span class="inst">(H:M)</span> 
                                    </div> 
                                    <div class="form-group col-lg-12">
                                        <label>Descrição</label>
                                        <textarea type="text" cols="40" rows="12" id="descricao" class="form-control" name="descricao" data-trigger="change" maxlength="500" ></textarea>
                                    </div>
                                    <input type="hidden" class="form-control" data-trigger="change" name="edit" id="edit" value="-1"/>
                                    <div class="form-group col-lg-12">
                                        <button type="submit" class="btn btn-default btn-block" name="evid">Registrar evento</button>
                                    </div>
                                </div>
                            {%else%}
                                <div class="row">
                                <div class="form-group col-lg-12">
                                    <label>Nome*</label>
                                    <input type="text" name="nome" id="nome" class="form-control" data-trigger="change" data-required="true" value="{{evento.getNome()}}">
                                </div>
                                {% if error2 is defined%}
                                    <div class="col-xs-12">
                                        <div class="col-xs-2"></div>
                                        <div class="col-xs-8 alert alert-danger fade in">
                                            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                            <strong>Nome já cadastrado!</strong>
                                        </div>
                                    </div>
                                {%endif%}
                                <div class="form-group col-lg-6">
                                    <label>Cidade*</label>
                                    <input type="text" name="cidade" class="form-control" data-trigger="change" data-required="true" value="{{evento.getCidade()}}">
                                </div>
                                <div class="form-group col-lg-6">
                                    <label for="estado">Estado:*</label>
                                        <select class="form-control" id="estado" name="estado" data-trigger="change" data-required="true">
                                            <option selected disabled>Escolha novamente</option> 
                                            <option value="al">AL</option>	 
                                            <option value="ap">AP</option>	 
                                            <option value="am">AM</option>	 
                                            <option value="ba">BA</option>	 
                                            <option value="ce">CE</option>	 
                                            <option value="df">DF</option>	 
                                            <option value="es">ES</option>
                                            <option value="go">GO</option>
                                            <option value="ma">MA</option>
                                            <option value="mt">MT</option>
                                            <option value="ms">MS</option>
                                            <option value="mg">MG</option>
                                            <option value="pa">PA</option>
                                            <option value="pb">PB</option>
                                            <option value="pr">PR</option>
                                            <option value="pe">PE</option>
                                            <option value="pi">PI</option>
                                            <option value="rj">RJ</option>
                                            <option value="rn">RN</option>
                                            <option value="rs">RS</option>
                                            <option value="ro">RO</option>
                                            <option value="rr">RR</option>
                                            <option value="sc">SC</option>
                                            <option value="sp">SP</option>
                                            <option value="se">SE</option>	 
                                            <option value="to">TO</option>
                                        </select>
                                </div>
                                <div class="form-group col-lg-9">
                                    <label>Rua*</label>
                                    <input type="text" name="rua" class="form-control" data-trigger="change" data-required="true" value="{{evento.getRua()}}">
                                </div>
                                <div class="form-group col-lg-3">
                                    <label>Número*</label>
                                    <input type="number" name="numero" class="form-control" data-trigger="change" data-required="true" min="0" value="{{evento.getNumero()}}">
                                </div>
                                <div class="form-group col-lg-12">
                                    <label>Bairro*</label>
                                    <input type="text" name="bairro" class="form-control" data-trigger="change" data-required="true" value="{{evento.getBairro()}}">
                                </div>
                                <div class="form-group col-lg-12">
                                    <label>Complemento</label>
                                    <input type="text" name="complemento" class="form-control" data-trigger="change" value="{{evento.getComplemento()}}">
                                </div>
                                <div class="form-group col-lg-12">
                                    <label>Link para o evento no Facebook*</label>
                                    <input type="url" name="linkfacebook" class="form-control" data-trigger="change" data-required="true" value="{{evento.getLinkfacebook()}}">
                                </div>
                                <div class="form-group col-lg-12"> 
                                    <label>Data de Início*</label>
                                    <input type="date" name="datainicio" class="form-control" data-trigger="change" data-required="true" value="{{evento.getDatainicio().format('yy-m-d')}}"/><span class="inst">(MM/DD/YY)</span> 
                                </div> 

                                <div class="form-group col-lg-12"> 
                                    <label>Data de Término*</label>
                                    <input type="date" name="datafim" class="form-control" data-trigger="change" data-required="true" value="{{evento.getDatafim().format('yy-m-d')}}"/><span class="inst">(MM/DD/YY)</span> 
                                </div> 
                                <div class="form-group col-lg-12"> 
                                    <label>Horário de Início*</label>
                                    <input type="time" name="horainicio" class="form-control" data-trigger="change" data-required="true" value="{{evento.getHorainicio().format('H:i')}}"/><span class="inst">(MM/DD/YY)</span> 
                                </div> 

                                <div class="form-group col-lg-12"> 
                                    <label>Horário de Término*</label>
                                    <input type="time" name="horafim" class="form-control" data-trigger="change" data-required="true" value="{{evento.getHorafim().format('H:i')}}"/><span class="inst">(MM/DD/YY)</span> 
                                </div> 
                                <div class="form-group col-lg-12">
                                    <label>Descrição</label>
                                    <textarea type="text" cols="40" rows="12" id="descricao" class="form-control" name="descricao" data-trigger="change" maxlength="500" >{{evento.getDescricao()}}</textarea>
                                </div>
                                <input type="hidden" class="form-control" data-trigger="change" name="edit" id="edit" value="1"/>
                                <div class="form-group col-lg-12">
                                    <div class="form-group col-lg-6">
                                        <button type="submit" class="btn btn-default btn-block" name="evid" id="evid" value="{{evento.getId()}}">Editar evento</button>
                                    </div>
                                </div>
                            </div>
                            {%endif%}
                        </form>
                        <form action="{{path('login_eventolista')}}">
                            <input type="submit" class="btn btn-default btn-block" value="Voltar">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{%endblock%}