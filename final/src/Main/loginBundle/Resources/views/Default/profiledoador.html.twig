{%extends "loginBundle:Default:basicdoadorlogado.html.twig"%}
{%block container %}
    <div class="container">

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">
                        <strong>Seu Perfil</strong>
                    </h2>
                    <hr>
                    <div class="col-xs-12" style="height:30px;"></div>
                    <div class="col-lg-2 text-center"></div>
                    <div class="col-lg-8">
                        <table class="table table-bordered" border="0" celpadding="0" cellspacing="0">
                            <tbody>
                                <tr>
                                    <td>
                                        <div class="col-lg-12 text-left">
                                            <p>
                                                <strong>Doador:</strong>
                                            </p>
                                        </div>
                                        <div class="col-lg-12 text-left">
                                            <p>
                                                {{nome}}
                                            </p>
                                        </div>
                                        <div class="col-lg-12 text-left">
                                            <p>
                                                <strong>Tipo de sangue:</strong>
                                            </p>
                                        </div>
                                        <div class="col-lg-12 text-left">
                                            <p>
                                                {{tiposangue}}{{rhsangue}}
                                            </p>
                                        </div>
                                        <div class="col-lg-12 text-left">
                                            <p>
                                                <strong>Logradouro:</strong>
                                            </p>
                                        </div>
                                        <div class="col-lg-12 text-left">
                                            <p>
                                                {{cidade}}
                                            </p>
                                        </div>
                                        <form role="form" method="POST" action="{{path('login_doador_homepage')}}" data-validate="parsley">
                                            <div class="col-lg-12 text-center">
                                                <div class="form-group col-lg-12">
                                                    <button type="submit" class="btn btn-default" name="volta" value="voltar">Voltar</button>
                                                </div>
                                            </div>
                                        </form>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>

    </div>
{%endblock%}
