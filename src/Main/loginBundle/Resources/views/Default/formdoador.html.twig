{%extends "loginBundle:Default:basicdoador.html.twig"%}
{%block container %}
<div class="container">

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">
						<strong>Registre-se!</strong>
                    </h2>
                    <hr>
                    <p>
			Por favor preencha este formulário para receber notificações sobre doações.
                    </p>
                    <p>
			Os campos marcados com * são obrigatórios.
                    </p>
                    <form role="form" method="POST" action="{{path('login_doador_register')}}" data-validate="parsley">
                        <div class="row">
                            <div class="form-group col-lg-12">
                                <label>Usuário*</label>
                                <input type="text" name="username" id="username" class="form-control" data-trigger="change" data-required="true">
                            </div>
                            <div class="form-group col-lg-12">
                                <label>Senha*</label>
                                <input type="password" name="password" id="password" class="form-control" data-trigger="change" data-required="true">
                            </div>
                            <div class="form-group col-lg-12">
                                <label>Repita sua Senha*</label>
                                <input type="password" name="repassword" class="form-control" data-trigger="change" data-required="true" data-equalto="#password">
                            </div>
                            <div class="form-group col-lg-12">
                                <label>Nome*</label>
                                <input type="text" name="nome" class="form-control" data-trigger="change" data-required="true">
                            </div>
                            <div class="form-group col-lg-12">
                                <label>Cidade*</label>
                                <input type="text" name="cidade" class="form-control" data-trigger="change" data-required="true">
                            </div>
                            <div class="form-group col-lg-6">
                                <label>Você tem mais do que 50 quilos?*</label>
                                <input type="checkbox" name="peso" class="form-control" data-trigger="change">
                            </div>
                            <div class="clearfix"></div>
                            <div class="form-group col-lg-6">
                                <label for="sangue">Insira seu tipo sanguíneo:*</label>
									  <select class="form-control" id="sangue" name="sangue" data-trigger="change" data-required="true">
										<option>A</option>
										<option>B</option>
										<option>AB</option>
										<option>O</option>
									  </select>
                            </div>
							<div class="form-group col-lg-6">
                                <label for="rh">Insira seu RH:*</label>
									  <select class="form-control" id="rh" name="rh" data-trigger="change" data-required="true">
										<option>+</option>
										<option>-</option>
									  </select>
                            </div>
                            <div class="form-group col-lg-12">
                                <button type="submit" class="btn btn-default">Registrar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
{%endblock%}