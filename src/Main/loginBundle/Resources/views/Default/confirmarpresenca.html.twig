{%extends "loginBundle:Default:basicdoador.html.twig"%}
{%block container %}
    <div class="container">

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">
                        <strong>Testando Confirmar Presença</strong>
                    </h2>
                    <hr>

					<div class="col-lg-12 text-center">
					</div>

					<div class="col-lg-12">
						<ul>
                                                        <div class="col-lg-12 text-center">
                                                            <p>
                                                                <strong>{{nome}}</strong>
                                                            </p>
                                                        </div>
                                                        <br>
                                                        <hr>
                                                        <div class="col-lg-12 text-center">
                                                            <p>{{rua}}, {{numero}}</p>
                                                            <p>Bairro {{bairro}}</p>
                                                            <br>
                                                        </div>
                                                        <br>
                                                        <hr>
                                                        <div class="col-lg-12 text-center">
                                                            <p>entre {{datainicio}} e {{datafim}}</p>
                                                            <p>das {{horainicio}} às {{horafim}}</p>
                                                            <br>
                                                        </div>
                                                        <div class="col-lg-12 text-center">
                                                            <hr>
                                                            <p>{{descricao}}</p>
                                                        </div>
                                                        <br>
                                                        <br>
                                                        <hr>
                                                        <br>
							<form role="form" method="POST" action="{{path('login_doador_confirmarpresenca',{'iddoevento':id})}}" data-validate="parsley">
                                                            <div class="col-lg-12 text-center">
                                                                <div class="form-group col-lg-12">
                                                                    <button type="submit" class="btn btn-default" name="confirm" value="confirmado">Confirmar Presença</button>
                                                                </div>
                                                            </div>
                                                        </form>
						</ul>
					</div>
                <div class="clearfix"></div>

                </div>
            </div>
        </div>

    </div>
{%endblock%}