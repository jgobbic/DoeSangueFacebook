{%extends "loginBundle:Default:basicdoador.html.twig"%}
{%block container %}
    <div class="container">

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">
						<strong>Logar conta!</strong>
                    </h2>
                    <hr>
                    <p>
			Insira seus dados para logar em sua conta!
		    </p>
                    <form role="form" method="POST" action="{{path('login_doador_login')}}" data-validate="parsley">
                        <div class="row">
                            <div class="form-group col-lg-12">
                                <label>Usu√°rio</label>
                                <input type="text" name="username" class="form-control" data-trigger="change" data-required="true">
                            </div>
                            <div class="form-group col-lg-12">
                                <label>Senha</label>
                                <input type="password" name="password" data-trigger="change" data-required="true">
                            </div>
                            <div class="form-group col-lg-12">
                                <button type="submit" class="btn btn-default">Logar</button>
                            </div>
                        </div>
                    </form>
                    <hr>
                    <h2 class="intro-text text-center">
                        <a href="{{path('login_doador_register')}}">Registrar conta!</a>
                    </h2>
                    <hr>
                </div>
            </div>
        </div>

    </div>
    {% if name is defined%}
        <div class="alert-info fade in">
            <strong>{{name}}</strong>
        </div>
    {%endif%}
{%endblock%}